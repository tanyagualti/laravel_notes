web.php
Route::get('/master', function () {
    $name="tanya";
    return view('master',['user'=> $name]);
});

master.blade.php
<h1>{{$user}}</h1> //print the data which is come from route

{{--we add more than one value--}}
web.php
Route::get('/master', function () {
    $name="tanya";
    return view('master',['user'=> $name,'city'=> 'delhi']);
});

master.blade.php

 <h1>{{$user}},{{$city}}</h1>
